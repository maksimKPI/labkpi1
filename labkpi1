#include <stdio.h>
#include <stdlib.h>
#include <windows.h>
#define Name "Максим"
#define LastName "Сіроштан"
#define GroupName "PE-31"
#define Faculty "РТФ"
#define University "Київський політехнічний інститут імені Ігоря Сікорського"

int main()
{
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);

    unsigned int age;
    unsigned int semestr;
    float admissionScore;
    int grade1;
    int grade2;
    int grade3;
    double averageGrade;

    printf("%s %s виконайте наступні дії.\n", Name, LastName);
    printf("Введіть номер семестру: ");
    scanf("%u", &semestr);

    printf("Введіть свій вступний бал: ");
    scanf("%f", &admissionScore);

    printf("Введіть оцінку за перший предмет : ");
    scanf("%d", &grade1);

    printf("Введіть оцінку за другий предмет : ");
    scanf("%d", &grade2);

    printf("Введіть оцінку за третій предмет : ");
    scanf("%d", &grade3);

    printf("Введіть свій вік: ");
    scanf("%u", &age);

    system("cls");

    averageGrade = (double)(grade1 + grade2 + grade3) / 3;

    printf("\n");
    printf("%s", University);
    printf("\n%s", Faculty);
    printf("\n%s", GroupName);
    printf("\n---------------------------");
    printf("\nstudent: %s %s",Name,LastName);
    printf("\nage: %u",age);
    printf("\nsemestr: %u",semestr);
    printf("\n---------------------------");
    printf("\nadmission score: %.2f",admissionScore);
    printf("\naverage grade = %.3lf",averageGrade);
    printf("\n");

    return 0;
}
